<!DOCTYPE HTML>
<html lang="en">
<head>
  <title>Decide Kick</title>
  <meta charset="UTF-8" />

  <!-- External CSS -->
  <!-- <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" /> -->

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  <!-- External Font from Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Barlow+Condensed:400,700" rel="stylesheet">

  <!-- Internal CSS -->
  <link rel="stylesheet" href="/styles/create.css" type="text/css">
</head>

<body>
  <div class="verticalcenter">
    <div class="container-fluid">
      <form id='survey_create_form' action="/create" method="POST">
          <div class="question_div">
            <input class="survey_input_question" type="text" placeholder="Question" name="survey_input_question">
          </div>

          <div class="row">
            <div class="yellowBackground">
              <div class="col-md-12">
                <input class="survey_input_answer1" type="text" placeholder="Answer 1" name="answers[0][answer]">
                <input class="survey_input_description" type="text" placeholder="Description" name="answers[0][description]">
              </div>
            </div>

            <div class="pinkBackground">
              <div class="col-md-12">
                <input class="survey_input_answer2" type="text" placeholder="Answer 2" name="answers[1][answer]">
                <input class="survey_input_description" type="text" placeholder="Description" name="answers[1][description]">
              </div>
            </div>

            <div class="greenBackground">
              <div class="col-md-12">
                <input class="survey_input_answer3" type="text" placeholder="Answer 3" name="answers[2][answer]">
                <input class="survey_input_description" type="text" placeholder="Description" name="answers[2][description]">
              </div>
            </div>

            <div class="blueBackground">
              <div class="col-md-12">
                <input class="survey_input_answer4" type="text" placeholder="Answer 4" name="answers[3][answer]">
                <input class="survey_input_description" type="text" placeholder="Description" name="answers[3][description]">
              </div>
            </div> 
            <input class="submit" type="submit" value="Proceed">
          </div>
      </form>
    </div>
  </div>
</body>

</html>