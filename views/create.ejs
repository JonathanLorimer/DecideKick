<body>
    <h1>Decision Maker</h1>
    <form id='survey_create_form' action="/create" method="POST">
        <input class="survey_input_title" type="text" placeholder="Title">
        <input class="survey_input_description" type="text" placeholder="Description">
        <input class="survey_input_question" type="text" placeholder="Question">
        <div class="yellowBackground">
            <input class="survey_input_answer1" type="text" placeholder="Answer 1">
        </div>
        <div class="pinkBackground">
            <input class="survey_input_answer2" type="text" placeholder="Answer 2">
        </div>
        <div class="greenBackground">
            <input class="survey_input_answer3" type="text" placeholder="Answer 3">
        </div>
        <div class="blueBackground">
            <input class="survey_input_answer4" type="text" placeholder="Answer 4">
        </div>
        <input type="submit" value="Proceed"> 
    </form>
